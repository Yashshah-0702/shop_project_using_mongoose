<%-include('./layout/main.ejs') %>


  <main>
    <% if(orders.length<=0) {%>
    <h1>No Orders..</h1>
    <%} else {%>
        <ul>
            <%orders.forEach(order=>{%>
            <li>
                <h1>Order ID:-<%= order._id%> </h1>
                <a href="/orders/<%= order._id%>" style="color: blue; text-decoration: underline;" >Generate Invoice</a>
                <!-- <h4>Items</h4> -->
                <ul>
                    <%  order.products.forEach(p=>{%>
                        <li>
                            <%= p.product.title %> (<%= p.quantity %>) 
                        </li>
                    <%});%>    
                </ul>
            </li>
            <%});%>
        </ul>
    <%}%>    
  </main>